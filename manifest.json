{
    "manifest_version": 2,
    "name": "AIOstreams",
    "version": "1.0",
    "description": "Adds menu items for AIOstreams scripts",

    "browser_specific_settings": {
        "gecko": {
          "id": "walkero@gmail.com",
          "strict_min_version": "50.0"
        }
      },
  
    "permissions": [
        "menus",
        "activeTab",
        "nativeMessaging"
    ],

    "background": {
        "scripts": ["src/main.js"]
    },
  
    "icons": {
      "16": "icons/video-camera.svg",
      "32": "icons/video-camera.svg",
      "48": "icons/video-camera.svg"
    }
}